  temperature       Float
  humidity          Float
  windSpeed         Float
  precipitation     Float
  soilMoisture      Float?
  weatherCode       Int?
  description       String?

  // Risk analizi
  riskLevel         Int       @default(0) // 0-4 arası
  risks             Json?     // Risk detayları

  // Sulama önerileri
