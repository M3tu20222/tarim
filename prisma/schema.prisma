// 🌦️ WEATHER RISK ALERTS MODEL
model WeatherAlert {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  alertType   WeatherAlertType
  severity    AlertSeverity
  title       String
  message     String

  // Coğrafi bilgiler
  fieldId     String?          @db.ObjectId
  field       Field?           @relation("FieldWeatherAlerts", fields: [fieldId], references: [id])
  coordinates Json?            // {latitude: number, longitude: number}

  // Risk parametreleri
  riskFactors Json             // {windSpeed: number, temperature: number, humidity: number, etc.}
  threshold   Json?            // Eşik değerleri

  // Timing
  startTime   DateTime
  endTime     DateTime?
  duration    Int?             // Dakika cinsinden

  // Status
  status      AlertStatus      @default(ACTIVE)
  isResolved  Boolean          @default(false)

  // Actions & Recommendations
  recommendations String[]     // Öneriler listesi
  actionTaken     String?      // Yapılan işlem

  // Metadata
  createdBy   String?          @db.ObjectId
  user        User?            @relation("UserWeatherAlerts", fields: [createdBy], references: [id])
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // External data
  apiSource   String?          // "openmeteo", "custom", etc.
  sourceData  Json?            // Ham API verisi

  @@index([alertType])
  @@index([severity])
  @@index([fieldId])
  @@index([status])
  @@index([startTime])
  @@index([createdAt])
}

